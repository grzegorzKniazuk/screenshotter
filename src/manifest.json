{
  "name": "Screenshotter",
  "author": "Grzegorz Knia≈ºuk",
  "version": "1.0",
  "description": "Screenshotter by Grzegorz",
  "manifest_version": 2,
  "browser_action": {
    "default_icon": {
      "16": "assets/browser-16.png",
      "32": "assets/browser-32.png"
    },
    "default_title": "Make the screenshot!",
    "default_popup": "index.html"
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "storage",
    "notifications",
    "activeTab",
    "downloads"
  ],
  "background": {
    "scripts": ["main.js"]
  }
}
