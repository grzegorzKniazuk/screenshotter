{
  "name": "Screenshoter",
  "author": "Grzegorz Knia≈ºuk",
  "version": "1.0",
  "description": "Screenshoter by Grzegorz",
  "manifest_version": 2,
  "omnibox": { "keyword" : "scr" },
  "icons": {
    "16": "assets/browser-16.png",
    "32": "assets/browser-32.png"
  },
  "commands": {
    "capture_new_screenshot": {
      "suggested_key": {
        "windows": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "chromeos": "Ctrl+Shift+S",
        "linux": "Ctrl+Shift+S"
      },
      "description": "Capture screenshot"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/browser-16.png",
      "32": "assets/browser-32.png"
    },
    "default_title": "Press Ctrl+Shift+S to save screenshot",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": [ "background.js" ],
    "persistent": false
  },
  "permissions": [
    "tabCapture",
    "tabs",
    "storage",
    "unlimitedStorage",
    "notifications",
    "activeTab",
    "downloads",
    "commands"
  ]
}
